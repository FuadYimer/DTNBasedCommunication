
<manifest xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" package="org.disrupted.rumble">
    <!--
          ~ Permission for networking related operation
           -->
    <uses-permission android:required="true" android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:required="true" android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:required="true" android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:required="true" android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <uses-permission android:required="true" android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:required="true" android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:required="true" android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE"/>
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <!--
          ~ Actually we don't need to access the Internet but this permission is required
          ~ to play with the WiFi !
           -->
    <uses-permission android:required="true" android:name="android.permission.INTERNET"/>
    <!--
          ~ Permission to store file attached to status sent by neighborhing devices
           -->
    <uses-permission android:required="true" android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!--
           ~ Permission to attached an image from the library
           -->
    <uses-permission android:required="true" android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <!--
          ~ Permission to take picture
           -->
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:required="false" android:name="android.hardware.camera"/>
    <uses-feature android:required="false" android:name="android.hardware.camera.autofocus"/>
    <uses-feature android:required="false" android:name="android.hardware.camera.flash"/>
    <!--
          ~ Permission related to the bluetooth scanning strategy
          ~ The accelerometer is used to detect wether the phone is moving or not
          ~ this is to avoid draining battery on scanning when phone is standing still
           -->
    <uses-feature android:required="false" android:name="android.hardware.sensor.accelerometer"/>
    <!-- Permission to vibrate the device on incoming events  -->
    <uses-permission android:required="false" android:name="android.permission.VIBRATE"/>
    <!-- Permission to boot on startup if enabled in the settings  -->
    <uses-permission android:required="false" android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <application android:icon="@drawable/ic_launcher_rumble" android:label="@string/app_name" android:name=".app.RumbleApplication" android:theme="@style/Theme.AppCompat">
        <activity android:name=".userinterface.activity.LoginScreen"> </activity>
        <activity android:name=".userinterface.activity.RoutingActivity"
            android:exported="true"
            tools:ignore="Instantiatable,IntentFilterExportedReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".userinterface.activity.HomeActivity" android:screenOrientation="portrait" android:label="@string/app_name" android:windowSoftInputMode="adjustResize|stateHidden" android:theme="@style/Theme.AppCompat.NoActionBar" tools:ignore="Instantiatable"/>
        <activity android:name=".userinterface.activity.GroupListActivity" android:screenOrientation="portrait" android:uiOptions="splitActionBarWhenNarrow" android:theme="@style/Theme.AppCompat.NoActionBar" tools:ignore="Instantiatable">
            <meta-data android:name="android.support.UI_OPTIONS" android:value="splitActionBarWhenNarrow"/>
        </activity>
        <activity android:name=".userinterface.activity.GroupDetailActivity" android:screenOrientation="portrait" android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".userinterface.activity.ContactListActivity" android:screenOrientation="portrait" android:uiOptions="splitActionBarWhenNarrow">
            <meta-data android:name="android.support.UI_OPTIONS" android:value="splitActionBarWhenNarrow"/>
        </activity>
        <activity android:name=".userinterface.activity.ContactDetailActivity" android:screenOrientation="portrait" android:theme="@style/Theme.AppCompat.NoActionBar" tools:ignore="Instantiatable"/>
        <activity android:name=".userinterface.activity.HashtagListActivity" android:screenOrientation="portrait" android:uiOptions="splitActionBarWhenNarrow" tools:ignore="Instantiatable">
            <meta-data android:name="android.support.UI_OPTIONS" android:value="splitActionBarWhenNarrow"/>
        </activity>
        <activity android:name=".userinterface.activity.HashtagDetailActivity" android:screenOrientation="portrait" android:uiOptions="splitActionBarWhenNarrow" tools:ignore="Instantiatable">
            <meta-data android:name="android.support.UI_OPTIONS" android:value="splitActionBarWhenNarrow"/>
        </activity>
        <activity android:name=".userinterface.activity.PopupComposeStatus" android:screenOrientation="portrait" android:theme="@style/PopupActivity" android:windowSoftInputMode="adjustPan|adjustResize|stateVisible"/>
        <activity android:name=".userinterface.activity.PopupCreateGroup" android:screenOrientation="portrait" android:theme="@style/PopupActivity" android:windowSoftInputMode="adjustPan|adjustResize|stateVisible"/>
        <activity android:name=".userinterface.activity.PopupInputGroupKey" android:screenOrientation="portrait" android:theme="@style/PopupActivity" android:windowSoftInputMode="adjustPan|adjustResize|stateVisible"/>
        <activity android:name=".userinterface.activity.DisplayQRCode" android:screenOrientation="portrait" tools:ignore="Instantiatable"
            android:exported="true">
            <intent-filter>
                <action android:name="org.disrupted.rumble.userinterface.activity.DisplayQRCode"/>
            </intent-filter>
        </activity>
        <activity android:name=".userinterface.activity.DisplayImage" tools:ignore="Instantiatable"
            android:exported="true">
            <intent-filter>
                <action android:name="org.disrupted.rumble.userinterface.activity.DisplayImage"/>
            </intent-filter>
        </activity>
        <activity android:name=".userinterface.activity.DisplayStatusActivity" android:screenOrientation="portrait" tools:ignore="Instantiatable"
            android:exported="true">
            <intent-filter>
                <action android:name="org.disrupted.rumble.userinterface.activity.DisplayStatusActivity"/>
            </intent-filter>
        </activity>
        <activity android:name=".userinterface.activity.SettingsActivity" android:screenOrientation="portrait" tools:ignore="Instantiatable"> </activity>
        <activity android:name=".userinterface.activity.settings.LicenceActivity" android:screenOrientation="portrait" tools:ignore="Instantiatable"> </activity>
        <activity android:name=".userinterface.activity.settings.StatisticActivity" android:screenOrientation="portrait" tools:ignore="Instantiatable"> </activity>
        <activity android:name=".userinterface.activity.settings.MiscellaneousActivity" android:screenOrientation="portrait"> </activity>
        <activity android:name=".userinterface.activity.settings.DebugActivity" android:screenOrientation="portrait"> </activity>
        <activity android:name=".userinterface.activity.settings.AboutActivity" android:screenOrientation="portrait" tools:ignore="Instantiatable"> </activity>
        <activity android:name=".userinterface.activity.settings.StorageActivity" android:screenOrientation="portrait" tools:ignore="Instantiatable"> </activity>
        <activity android:name="info.vividcode.android.zxing.CaptureActivity" android:theme="@style/Theme.ZXingCaptureActivity" android:screenOrientation="landscape"
            tools:ignore="MissingClass"> </activity>
        <service android:name=".network.NetworkCoordinator"> </service>
        <receiver android:name=".app.StartOnBoot" android:label="StartOnBoot" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
    </application>
</manifest>